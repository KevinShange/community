// Prisma schema - MongoDB
// https://prisma.io/docs/orm/reference/prisma-schema-reference

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id          String    @id @default(auto()) @map("_id") @db.ObjectId
  name        String
  email       String?   // 可重複：同一 email 可用不同登入方式為不同使用者
  password    String?   // 僅 credential 登入時使用，bcrypt 雜湊
  avatar      String?
  coverImage  String?   // 個人頁背景圖，預留後續實作
  handle      String    @unique // 使用者代稱，如 @username 或 @username-google
  bio         String?   // 經歷／簡介
  birthday    DateTime? // 生日
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  accounts Account[]
  posts    Post[]
  comments Comment[]
  drafts   Draft[]

  postLikes     PostLike[]
  commentLikes  CommentLike[]
  postRetweets  PostRetweet[]

  // 追蹤關係
  following Follow[] @relation("UserFollowing")
  followers Follow[] @relation("UserFollowers")

  directMessagesSent    DirectMessage[] @relation("MessageSender")
  directMessagesReceived DirectMessage[] @relation("MessageReceiver")

  /** 我讀過與某人的對話的已讀時間（用於未讀圓點） */
  conversationReadsAsReader  ConversationRead[] @relation("ConversationReadAsReader")
  conversationReadsAsPartner  ConversationRead[] @relation("ConversationReadAsPartner")

  /** 通知最後已讀時間（進入 Notifications 頁時更新，用於左欄未讀小圓點） */
  notificationsReadAt DateTime?

  /** 發給我的通知（按讚/轉發/回覆/追蹤） */
  notificationsReceived Notification[] @relation("NotificationsReceived")
  /** 我觸發的通知（作為 actor） */
  notificationsSent Notification[] @relation("NotificationActor")
}

model DirectMessage {
  id         String   @id @default(auto()) @map("_id") @db.ObjectId
  senderId   String   @db.ObjectId
  sender     User     @relation("MessageSender", fields: [senderId], references: [id], onDelete: Cascade)
  receiverId String   @db.ObjectId
  receiver   User     @relation("MessageReceiver", fields: [receiverId], references: [id], onDelete: Cascade)
  content    String   // 可為空字串若僅傳圖
  imageUrls  Json?    // string[] from Cloudinary
  createdAt  DateTime @default(now())

  @@index([senderId])
  @@index([receiverId])
  @@index([createdAt])
}

/** 使用者對某對話的最後已讀時間（用於未讀圓點：對方有新訊息且晚於 lastReadAt 則未讀） */
model ConversationRead {
  id         String   @id @default(auto()) @map("_id") @db.ObjectId
  userId     String   @db.ObjectId
  partnerId  String   @db.ObjectId
  lastReadAt DateTime
  user       User     @relation("ConversationReadAsReader", fields: [userId], references: [id], onDelete: Cascade)
  partner    User     @relation("ConversationReadAsPartner", fields: [partnerId], references: [id], onDelete: Cascade)

  @@unique([userId, partnerId])
  @@index([userId])
}

model Account {
  id                String  @id @default(auto()) @map("_id") @db.ObjectId
  userId            String  @db.ObjectId
  user              User    @relation(fields: [userId], references: [id], onDelete: Cascade)
  provider          String  // google | facebook | github
  providerAccountId String
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt

  @@unique([provider, providerAccountId])
  @@index([userId])
}

model Post {
  id           String   @id @default(auto()) @map("_id") @db.ObjectId
  authorId     String   @db.ObjectId
  author       User     @relation(fields: [authorId], references: [id])
  content      String
  imageUrls    Json?    // string[] from Cloudinary
  likeCount    Int      @default(0)
  retweetCount Int      @default(0)
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  comments     Comment[]
  likes        PostLike[]
  retweets     PostRetweet[]
  notifications Notification[]

  @@index([authorId])
  @@index([createdAt])
}

model Comment {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  postId    String   @db.ObjectId
  post      Post     @relation(fields: [postId], references: [id], onDelete: Cascade)
  authorId  String   @db.ObjectId
  author    User     @relation(fields: [authorId], references: [id])
  content   String
  imageUrls Json?    // string[] from Cloudinary
  likeCount Int      @default(0)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  likes       CommentLike[]
  notifications Notification[]

  @@index([postId])
  @@index([authorId])
  @@index([createdAt])
}

model PostLike {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  postId    String   @db.ObjectId
  post      Post     @relation(fields: [postId], references: [id], onDelete: Cascade)
  userId    String   @db.ObjectId
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  createdAt DateTime @default(now())

  @@unique([postId, userId])
  @@index([userId])
  @@index([postId])
}

model CommentLike {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  commentId String   @db.ObjectId
  comment   Comment  @relation(fields: [commentId], references: [id], onDelete: Cascade)
  userId    String   @db.ObjectId
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  createdAt DateTime @default(now())

  @@unique([commentId, userId])
  @@index([userId])
  @@index([commentId])
}

model PostRetweet {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  postId    String   @db.ObjectId
  post      Post     @relation(fields: [postId], references: [id], onDelete: Cascade)
  userId    String   @db.ObjectId
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  createdAt DateTime @default(now())

  @@unique([postId, userId])
  @@index([userId])
  @@index([postId])
}

model Draft {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  userId    String   @db.ObjectId
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  content   String
  createdAt DateTime @default(now())

  @@index([userId])
  @@index([createdAt])
}

model Follow {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  followerId  String   @db.ObjectId
  follower    User     @relation("UserFollowing", fields: [followerId], references: [id], onDelete: Cascade)
  followingId String   @db.ObjectId
  following   User     @relation("UserFollowers", fields: [followingId], references: [id], onDelete: Cascade)
  createdAt   DateTime @default(now())

  @@unique([followerId, followingId])
  @@index([followerId])
  @@index([followingId])
}

/** 通知：按讚 / 轉發 / 回覆 / 追蹤（方案 B 寫入此表，列表與未讀皆由此查） */
model Notification {
  id           String   @id @default(auto()) @map("_id") @db.ObjectId
  type         String   // like | repost | reply | follow
  actorId      String   @db.ObjectId
  actor        User     @relation("NotificationActor", fields: [actorId], references: [id], onDelete: Cascade)
  targetUserId String   @db.ObjectId
  targetUser   User     @relation("NotificationsReceived", fields: [targetUserId], references: [id], onDelete: Cascade)
  postId       String?  @db.ObjectId
  post         Post?    @relation(fields: [postId], references: [id], onDelete: Cascade)
  commentId    String?  @db.ObjectId
  comment      Comment? @relation(fields: [commentId], references: [id], onDelete: Cascade)
  createdAt    DateTime @default(now())

  @@index([targetUserId])
  @@index([createdAt])
}
